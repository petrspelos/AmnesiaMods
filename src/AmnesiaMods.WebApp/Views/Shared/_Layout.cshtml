<!DOCTYPE html>
<html lang="en-us">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - AmnesiaMods</title>
  <link rel="stylesheet" href="~/lib/spectre/spectre-icons.min.css" />
  <link rel="stylesheet" href="~/lib/spectre/spectre.min.css" />
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
  <header class="navbar">
    <section class="navbar-section">
      <a href="..." class="navbar-brand mr-2">Amnesia Mods</a>
      <a href="..." class="btn btn-link">Events</a>
      <a href="..." class="btn btn-link">Custom Stories</a>
      <a href="..." class="btn btn-link">Full Conversions</a>
    </section>
    <section class="navbar-section">
      <div class="input-group input-inline">
        <input class="form-input" type="text" placeholder="search">
        <button class="btn btn-primary input-group-btn">Search</button>
      </div>
    </section>
  </header>

  <div class="container">
    @RenderBody()
  </div>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
